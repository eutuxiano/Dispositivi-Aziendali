@model DeviceManagerMVC.Models.Device

@{
    ViewData["Title"] = "Dettagli dispositivo";
}

<h2 class="text-center mt-4">Dettagli dispositivo</h2>

<div class="d-flex justify-content-center mt-4">
    <div class="card shadow p-4" style="width: 40rem;">

        <dl class="row">
            <dt class="col-sm-4 text-nowrap">Serial Number</dt>
            <dd class="col-sm-8">@Model.SerialNumber</dd>

            <dt class="col-sm-4 text-nowrap">Device Type</dt>
            <dd class="col-sm-8">@Model.DeviceType</dd>

            <dt class="col-sm-4 text-nowrap">Model</dt>
            <dd class="col-sm-8">@Model.Model</dd>

            <dt class="col-sm-4 text-nowrap">Assigned To</dt>
            <dd class="col-sm-8">@Model.AssignedTo</dd>

            <dt class="col-sm-4 text-nowrap">Team</dt>
            <dd class="col-sm-8">@Model.Team</dd>
        </dl>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifica</a>
            <a asp-action="Index" class="btn btn-secondary">Indietro</a>
        </div>

    </div>
</div>

